<!DOCTYPE html>
<html lang="pt-br">
  <% if (message != '') { %>
    <%- include ('./components/message', {
      typeMessage: type, 
      pMessage: message
    }) %>
  
  
    
  <% } %>

  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css"
    />
    <title>To Do List</title>
  </head>
  <body>
    <header>
      <% if (task == null) { %> 
        <%- include('./components/form',{ title: "TO DO LIST",
         action: "create", value: "", 
         idBtn: "addButton", 
         nameBtn:"Adicionar"})%> 
      <% } else { %>
        <%- include('./components/form',
        { title: "EDITAR TAREFA", action: `updateOne/${task._id}`, value: task.task, 
        idBtn: "updateButton", nameBtn:"Atualizar"}) %>     
      <% } %>
    </header>

    <section class="sectionTasks" id="tasks">
      <ul>
        <% tasksLists.forEach((task) => { %>

        <li class="check-<%= task.check %>">
          <div>
            <a href="/check/<%= task._id %>" class="check-<%= task.check %>"
              ><%= task.task %>
            </a>
            <span> Criado em <%= task.date.toLocaleDateString('pt-BR') %></span>
          </div>
          <div>
            <a class="btnUpdate" href="/getById/<%= task._id %>/update"
              ><i class="bi bi-pencil-square"></i
            ></a>
            <a class="btnDelete" href="/getById/<%= task._id %>/delete"
              ><i class="bi bi-trash3"></i
            ></a>
          </div>
        </li>

        <% }) %>
      </ul>
    </section>

    <% if (taskDelete != null ) { %> <%- include('./components/modalDel', {task:
    taskDelete}) %> <% } %>
    <script src="script.js"></script>
  </body>
</html>
